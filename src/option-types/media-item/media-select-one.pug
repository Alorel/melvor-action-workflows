include ../../ui/common

+btn('primary', 'sm')(v-if="value", @click="unselect", @vue:mounted="onBtnInit($el)")
  img.ActionWorkflowsCore-font-sized.mr-1(:src="value.media")
  span {{value.name}}
div(v-else)
  input.form-control.form-control-sm(
    v-model="filterText",
    @keyup="onKeyup",
    @blur="validation.touched = true",
    @vue:mounted="onInputInit($el)",
    placeholder="Search by nameâ€¦"
  )
  a(
    v-for="item in results",
    :key="item.id",
    role='button',
    @click="selectItem(item, $event)"
  )
    img.skill-icon-xs(:src="item.media", @vue:mounted="onItemInit($el, item)")
